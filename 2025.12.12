#include<bits/stdc++.h>
using namespace std;
int main(){
    int n,k;
    cin>>n>>k;
    vector<int> a(n);
    for(int i=0;i<n;i++){
        cin>>a[i];
    }
    int l=0,r=0,v=0;
    int pt=0,ans=0;
    while(l<n){
        while(r<n&&v+1-a[r]<=k){
            v+=1-a[r];
            r++;
        }
        if(r-l>ans){
            ans=r-l;
            pt=l;
        }
        v-=1-a[l];
        l++;
    }
    cout<<ans<<endl;
    for(int i=0;i<ans;i++){
        a[i+pt]=1;
    }
    for(int i=0;i<n;i++){
        cout<<a[i]<<' ';
    }
}
