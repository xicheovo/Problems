#include<bits/stdc++.h>
using namespace std;
typedef long long ll;
int main(){
    ll n,d,s;
    cin>>n>>d>>s;
    n/=s;
    d/=s;
    if(n<=d+1){
        cout<<n*s<<endl;
        return 0;
    }
    else{
        n=min(n,d*2);
        for(int i=2;i<1000005;i++){
            if(n%i==0&&n-n/i<=d){
                cout<<n*s<<endl;
                return 0;
            }
        }
        cout<<(n-1)*s<<endl;
    }
    return 0;
}
